#: import toast kivymd.toast
#: import utils kivy.utils
<TripSummary>
    cols: 2
    padding: 20, 20
    GridLayout:
        size_hint_x: .4
        spacing: 30
        cols: 1
        MDLabel:
            text: "Direction"
        MDLabel:
            text: "Departure Date"
        MDLabel:
            text: "Passenger"
        MDLabel:
            text: "Seat No"
        MDLabel:
            text: "Unit Price"
        MDLabel:
            text: "Total Payment"
    GridLayout:
        size_hint_x: .6
        spacing: 50
        cols: 1
        MDLabel:
            id: destination_fld
            text: root.destination
        MDLabel:
            id: departure_date_fld
            text: root.departure_date
        MDLabel:
            id: passenger_fld
            text: root.passenger
        MDLabel:
            id: seat_no_fld
            text: root.seat_no
        MDLabel:
            id: unit_price_fld
            text: "USD " + root.unit_price
        MDLabel:
            id: total_payment_fld
            text: "USD " + root.total_payment
<CustomDrawerItem@MDNavigationDrawerItem>
    text_color: 0, 0, 0, 1
    icon_color: 0, 0, 0, 1
<NoDataTicket>
    MDLabel:
        text: root.text
        halign: "center"
        font_style: "H2"
<Seat>
    size_hint_y: None
    height: seat_no.height
    MDCheckbox:
        size_hint_x: None
        on_active:
            root.add_seat(self, root.text)
    MDLabel:
        id: seat_no
        size_hint_x: None
        text: root.text
<OptionCard>
    radius: [12, 12, 12, 12]
    height: dp(120)
    FloatLayout:
        MDIconButton:
            pos_hint: {'center_x': .5, 'center_y': .6}
            icon: root.icon
            md_bg_color: (1, 1, 1, 1)
        MDLabel:
            pos_hint: {'center_x': .5, 'center_y': .3}
            halign: "center"
            text: root.text
            font_style: "H5"
            bold: True
<PurchasedTicket>
    radius: [12, 12, 12, 12]
    style: "elevated"
    elevation: 20
    padding: 100, 20
    size_hint_y: None
    height: dp(100)
    GridLayout:
        cols: 3
        spacing: 20
        MDLabel:
            text: "Destination"
        MDLabel:
            text: "Booking Date"
        MDLabel:
            text: "Price"
        MDLabel:
            text: root.destination
        MDLabel:
            text: root.booking_date
        MDLabel:
            text: "USD " + root.price
        MDBoxLayout:
            orientation: "horizontal"
            MDIcon:
                icon: "bus"
            MDLabel:
                text: root.bus_name
        MDBoxLayout:
            orientation: "horizontal"
            MDIcon:
                icon: "car-seat"
            MDLabel:
                text: "Seat:" + root.seat
        MDLabel:
            bold: True
            text: root.paid_status
<BookingForm>
    radius: [12, 12, 12, 12]
    style: "elevated"
    elevation: 20
<BusTicket>
    radius: [12, 12, 12 ,12]
    style: "elevated"
    elevation: 20
    padding: 100, 20
    size_hint_y: None
    height: dp(100)
    GridLayout:
        id: trip_content
        cols: 3
        spacing: 20
        MDLabel:
            text: "Departure Date"
        MDLabel:
            text: "Departure Time"
        MDLabel:
            text: "Price"
        MDLabel:
            text: root.departure_date
        MDLabel:
            text: root.departure_time
        MDLabel:
            text: "USD " + root.price
        MDBoxLayout:
            orientation: "horizontal"
            MDIcon:
                icon: "bus"
            MDLabel:
                text: root.bus_name
        MDBoxLayout:
            orientation: "horizontal"
            MDIcon:
                icon: "car-seat"
            MDLabel:
                text: root.seat
<CustomTextField>
    icon_left_color: 0, 0, 0, 1
    icon_left_color_normal: 0, 0, 0, 1
    icon_left_color_focus: 0, 0, 0, 1
<CustomButton@MDRaisedButton>
    md_bg_color: 0, 0, 0, 1
<UserWindow>
    id: main_win
    orientation: "vertical"
    MDNavigationLayout:
        MDNavigationDrawer:
            id: nav_drawer
            type: "standard"
            anchor: "left"
            MDNavigationDrawerMenu:
                spacing: 20
                MDNavigationDrawerHeader:
                    id: nav_drawer_header
                    title: "Settings"
                    title_color: 0, 0, 0, 1
                    text: "Account Name"
                    text_color: 0, 0, 0, 1
                MDNavigationDrawerDivider:
                    color: 0, 0, 0, .5
                CustomDrawerItem:
                    icon: "account"
                    text: "Edit Profile"
                    on_release:
                        root.account_edit_profile()
                        nav_drawer.set_state("close")
                CustomDrawerItem:
                    icon: "decagram-outline"
                    text: "Account Settings"
                    on_release:
                        root.account_settings()
                        nav_drawer.set_state("close")
                CustomDrawerItem:
                    icon: "logout"
                    text: "Logout"
                    on_release:
                        root.show_logout_dialog()
                        nav_drawer.set_state("close")
                MDNavigationDrawerDivider:
                    color: 0, 0, 0, .5
        ScreenManager:
            id: scrn_mngr
            MDScreen:
                id: main_scrn
                name: "main_scrn"
                MDBoxLayout:
                    orientation: "vertical"
                    MDTopAppBar:
                        id: toolbar
                        title: "Booking"
                        type_height: "medium"
                        md_bg_color: 0, 0, 0, 1
                        left_action_items:
                            [ \
                            [ \
                            'menu', lambda x: \
                            nav_drawer.set_state("open") \
                            if nav_drawer.state == "close" else \
                            nav_drawer.set_state("close") \
                            ] \
                            ]
                    MDBottomNavigation:
                        first_widget: "booking"
                        selected_color_background: (0, 0, 0, 1)
                        text_color_active: (0, 0, 0, 1)
                        MDBottomNavigationItem:
                            id: booking
                            name: "booking"
                            text: "Booking"
                            icon: "bus"
                            on_tab_release:
                                root.booking_home()
                                toolbar.title = "Booking"
                            ScreenManager:
                                id: scrn_booking_mngr
                                Screen:
                                    id: scrn_booking_home
                                    name: "scrn_booking_home"
                                    MDBoxLayout:
                                        id: card_item
                                        orientation: "vertical"
                                        padding: main_win.size[0]/8, 200
                                        canvas.before:
                                            Color:
                                                rgba: (0, 0, 0, .25)
                                            Rectangle:
                                                size: self.size
                                                pos: self.pos
                                        BookingForm:
                                            orientation: "vertical"
                                            spacing: 10
                                            size_hint_y: None
                                            height: booking_form.height
                                            GridLayout:
                                                id: booking_form
                                                padding: 50, 50
                                                cols: 1
                                                size_hint_y: None
                                                height: self.minimum_height
                                                MDTextField:
                                                    id: location_fld
                                                    icon_left: "magnify"
                                                    icon_left_color: 0, 0, 0, 1
                                                    icon_left_color_normal: 0, 0, 0, 1
                                                    icon_left_color_focus: 0, 0, 0, 1
                                                    text_color_normal: 0, 0, 0, 1
                                                    hint_text: "Choose Location"
                                                    on_focus:
                                                        root.booking_location()
                                                        self.focus = False
                                                MDBoxLayout:
                                                    orientation: "horizontal"
                                                    spacing: 10
                                                    size_hint_y: None
                                                    TwoLineListItem:
                                                        id: departure_fld
                                                        text: "Departure Date"
                                                        secondary_text: "Add Departure Date"
                                                        on_release:
                                                            root.departure_date_picker()
                                                    TwoLineListItem:
                                                        id: return_fld
                                                        text: "Return Date"
                                                        secondary_text: "Add Return Date"
                                                        on_release:
                                                            root.return_date_picker()
                                                CustomButton:
                                                    text: "Search"
                                                    size_hint_x: 1
                                                    on_release:
                                                        root.search_tickets(location_fld.text, departure_fld.secondary_text)
                                        MDLabel:
                                            text: ""
                                Screen:
                                    id: scrn_booking_location
                                    name: "scrn_booking_location"
                                    ScrollView:
                                        MDBoxLayout:
                                            id: rv
                                            orientation: "vertical"
                                            spacing: 30
                                            size_hint_y: None
                                            height: self.minimum_height
                                            padding: 50, 10
                                Screen:
                                    id: scrn_search_ticket
                                    name: "scrn_search_ticket"
                                    MDBoxLayout:
                                        orientation: "vertical"
                                        spacing: 20
                                        padding: 0, 10
                                        canvas.before:
                                            Color:
                                                rgba: 0, 0, 0, .25
                                            Rectangle:
                                                size: self.size
                                                pos: self.pos
                                        MDLabel:
                                            id: search_count
                                            text: "No Result"
                                            bold: True
                                            size_hint_y: None
                                            height: 30
                                            padding: 20, 0
                                        ScrollView:
                                            MDBoxLayout:
                                                id: search_ticket_detail
                                                orientation: "vertical"
                                                spacing: 20
                                                size_hint_y: None
                                                height: self.minimum_height
                                                padding: 50, 10
                                Screen:
                                    id: "scrn_seat_selection"
                                    name: "scrn_seat_selection"
                                    MDBoxLayout:
                                        orientation: "vertical"
                                        spacing: 20
                                        padding: 50, 20
                                        canvas.before:
                                            Color:
                                                rgba: 0, 0, 0, .25
                                            Rectangle:
                                                size: self.size
                                                pos: self.pos
                                        MDCard:
                                            radius: [12, 12, 12, 12]
                                            orientation: "vertical"
                                            padding: 50, 30
                                            spacing: 20
                                            size_hint_y: None
                                            height: dp(300)
                                            MDLabel:
                                                text: "Ticket Summary"
                                                halign: "center"
                                                bold: True
                                                font_style: "H4"
                                                size_hint_y: .3
                                            MDBoxLayout:
                                                id: trip_summary_fld
                                        MDCard:
                                            radius: [12, 12 ,12, 12]
                                            orientation: "vertical"
                                            padding: 20, 20
                                            spacing: 10
                                            ScrollView:
                                                GridLayout:
                                                    id: seat_layout
                                                    cols: 3
                                                    size_hint_y: None
                                                    height: self.minimum_height
                                                    spacing: 10
                                        CustomButton:
                                            text: "Continue"
                                            size_hint_x: 1
                                            on_release:
                                                root.booking_payment()
                                Screen:
                                    id: scrn_payment
                                    name: 'scrn_payment'
                                    MDBoxLayout:
                                        orientation: "vertical"
                                        padding: 100, 50
                                        spacing: 40
                                        canvas.before:
                                            Color:
                                                rgba: 0, 0, 0, .25
                                            Rectangle:
                                                size: self.size
                                                pos: self.pos
                                        MDCard:
                                            radius: [12, 12, 12, 12]
                                            orientation: "vertical"
                                            padding: 50, 30
                                            spacing: 20
                                            size_hint_y: None
                                            height: dp(300)
                                            MDLabel:
                                                text: "Trip Summary"
                                                halign: "center"
                                                bold: True
                                                font_style: "H4"
                                                size_hint_y: .3
                                            MDBoxLayout:
                                                id: payment_detail
                                        MDCard:
                                            radius: [12, 12, 12, 12]
                                            orientation: "vertical"
                                            padding: 20, 20
                                            size_hint_y: None
                                            height: self.minimum_height
                                            spacing: 40
                                            MDBoxLayout:
                                                orientation: "horizontal"
                                                spacing: 20
                                                padding: 100, 0
                                                size_hint_y: None
                                                height: offline_payment.height
                                                canvas.before:
                                                    Color:
                                                        rgba: 0, 0, 0, .25
                                                    RoundedRectangle:
                                                        size: self.size
                                                        pos: self.pos
                                                        radius: [12, 12, 12, 12]
                                                MDLabel:
                                                    id: offline_payment
                                                    text: "Offline Payment"
                                                    font_style: "H5"
                                                    bold: True
                                                MDCheckbox:
                                                    group: "payment-method"
                                                    on_active:
                                                        root.set_payment_method(self, offline_payment.text)
                                            MDBoxLayout:
                                                orientation: "horizontal"
                                                spacing: 20
                                                padding: 100, 0
                                                size_hint_y: None
                                                height: online_payment.height
                                                canvas.before:
                                                    Color:
                                                        rgba: 0, 0, 0, .25
                                                    RoundedRectangle:
                                                        size: self.size
                                                        pos: self.pos
                                                        radius: [12, 12, 12, 12]
                                                MDLabel:
                                                    id: online_payment
                                                    text: "Online Payment"
                                                    font_style: "H5"
                                                    bold: True
                                                MDCheckbox:
                                                    group: "payment-method"
                                                    on_active:
                                                        root.set_payment_method(self, online_payment.text)
                                        CustomButton:
                                            text: "Check-Out"
                                            size_hint_x: 1
                                            on_release:
                                                root.check_out()
                                        MDLabel:
                                            text: ""
                        MDBottomNavigationItem:
                            id: ticket
                            name: "ticket"
                            text: "Ticket"
                            icon: "ticket-confirmation"
                            on_tab_release:
                                toolbar.title = "Tickets"
                                root.ticket_home()
                            ScreenManager:
                                id: scrn_ticket_mngr
                                Screen:
                                    id: scrn_ticket
                                    name: "scrn_ticket"
                                    MDBoxLayout:
                                        orientation: "vertical"
                                        padding: 0, 20
                                        canvas.before:
                                            Color:
                                                rgba: 0, 0, 0, .25
                                            Rectangle:
                                                size: self.size
                                                pos: self.pos
                                        ScrollView:
                                            MDBoxLayout:
                                                id: purchased_ticket
                                                orientation: "vertical"
                                                padding: main_win.size[0]/8, 50
                                                spacing: 30
                                                size_hint_y: None
                                                height: self.minimum_height
                                Screen:
                                    id: scrn_ticket_detail
                                    name: "scrn_ticket_detail"
                                    MDBoxLayout:
                                        orientation: "vertical"
                                        spacing: 20
                                        padding: main_win.size[0]/8, 20
                                        canvas.before:
                                            Color:
                                                rgba: 0, 0, 0, .25
                                            Rectangle:
                                                size: self.size
                                                pos: self.pos
                                        MDCard:
                                            radius: [12, 12, 12, 12]
                                            orientation: "vertical"
                                            padding: 50, 30
                                            spacing: 20
                                            size_hint_y: None
                                            height: dp(300)
                                            MDLabel:
                                                text: "Ticket Summary"
                                                halign: "center"
                                                bold: True
                                                font_style: "H4"
                                                size_hint_y: .3
                                            MDBoxLayout:
                                                id: purchased_summary
                                        MDLabel:
                                            text: ""
            MDScreen:
                id: scrn_setting
                name: "scrn_setting"
                ScreenManager:
                    id: scrn_account_mngr
                    Screen:
                        id: scrn_edit_profile
                        name: "scrn_edit_profile"
                        MDBoxLayout:
                            orientation: "vertical"
                            MDTopAppBar:
                                title: "Edit Profile"
                                type_height: "medium"
                                md_bg_color: 0, 0, 0, 1
                                right_action_items: [['arrow-left-bold', lambda x: root.goto_main_screen()]]
                            MDBoxLayout:
                                id: edit_profile_opt
                                orientation: "vertical"
                                padding: main_win.size[0]/4, main_win.size[1]/4
                                spacing: 20
                                canvas.before:
                                    Color:
                                        rgba: 0, 0, 0, .25
                                    Rectangle:
                                        size: self.size
                                        pos: self.pos
                                CustomTextField:
                                    id: first_name_fld
                                    hint_text: "First Name"
                                CustomTextField:
                                    id: last_name_fld
                                    hint_text: "Last Name"
                                CustomTextField:
                                    id: phone_fld
                                    hint_text: "Phone Number"
                                CustomTextField:
                                    id: email_fld
                                    hint_text: "Email"
                                    helper_text: "Invalid Email Address"
                                    helper_text_mode: "on_error"
                                    on_text: self.error = False
                                CustomTextField:
                                    id: dob_fld
                                    hint_text: "Date of Birth(DD/MM/YYYY)"
                                    on_focus:
                                        root.dob_date_picker()
                                CustomButton:
                                    text: "Update"
                                    padding: main_win.size[0]/3, 0
                                    size_hint_x: 1
                                    on_release:
                                        root.update_info(first_name_fld.text, last_name_fld.text,
                                        phone_fld.text, email_fld.text, dob_fld.text)
                    Screen:
                        id: scrn_account_settings
                        name: "scrn_account_settings"
                        MDBoxLayout:
                            orientation: "vertical"
                            MDTopAppBar:
                                title: "Change Password"
                                type_height: "medium"
                                md_bg_color: 0, 0, 0, 1
                                right_action_items: [['arrow-left-bold', lambda x: root.goto_main_screen()]]
                            MDBoxLayout:
                                id: settings_opt
                                orientation: "vertical"
                                padding: main_win.size[0]/4, main_win.size[1]/4
                                spacing: 20
                                canvas.before:
                                    Color:
                                        rgba: 0, 0, 0, .25
                                    Rectangle:
                                        size: self.size
                                        pos: self.pos
                                CustomTextField:
                                    id: old_pass
                                    hint_text: "Old Password"
                                    helper_text: "Incorrect Password"
                                    helper_text_mode: "on_error"
                                    icon_left: "key-variant"
                                    password: True
                                    on_text:
                                        self.error = False
                                    on_text_validate:
                                        new_pass.focus = True
                                CustomTextField:
                                    id: new_pass
                                    hint_text: "New Password"
                                    helper_text: "Invalid Password"
                                    helper_text_mode: "on_error"
                                    icon_left: "key-variant"
                                    password: True
                                    on_text:
                                        self.error = False
                                    on_text_validate:
                                        confirm_pass.focus = True
                                CustomTextField:
                                    id: confirm_pass
                                    hint_text: "Confirm New Password"
                                    helper_text: "Confirm password does not match"
                                    helper_text_mode: "on_error"
                                    icon_left: "key-variant"
                                    password: True
                                    on_text:
                                        self.error = False
                                    on_text_validate:
                                        root.update_password(old_pass.text, new_pass.text, confirm_pass.text)
                                MDBoxLayout:
                                    orientation: "horizontal"
                                    spacing: 20
                                    CustomButton:
                                        text: "Update"
                                        size_hint_x: .5
                                        on_release:
                                            root.update_password(old_pass.text, new_pass.text, confirm_pass.text)
                                    CustomButton:
                                        text: "Show Password"
                                        size_hint_x: .5
                                        on_release:
                                            old_pass.password = False if old_pass.password == True else True
                                            new_pass.password = False if new_pass.password == True else True
                                            confirm_pass.password = False if confirm_pass.password == True else True
                                            self.text = "Hide Password" if self.text == "Show Password" else "Show Password"